# Production Environment
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=${PROD_MONGODB_URI}
DB_NAME=genstack-prod

# JWT
JWT_SECRET=${PROD_JWT_SECRET}
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=https://app.genstack.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=error

# File Upload
MAX_FILE_SIZE=104857600
UPLOAD_PATH=/app/uploads

# Email
EMAIL_SERVICE=smtp
EMAIL_HOST=${PROD_EMAIL_HOST}
EMAIL_PORT=587
EMAIL_USER=${PROD_EMAIL_USER}
EMAIL_PASS=${PROD_EMAIL_PASS}
EMAIL_FROM=support@genstack.com

# Security
BCRYPT_ROUNDS=14

# Performance
CLUSTER_MODE=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
