# UAT Environment
NODE_ENV=staging
PORT=5000

# Database
MONGODB_URI=mongodb://uat-mongodb-server:27017/genstack-uat
DB_NAME=genstack-uat

# JWT
JWT_SECRET=${UAT_JWT_SECRET}
JWT_EXPIRE=24h

# CORS
CORS_ORIGIN=https://uat.genstack.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/app/uploads

# Email
EMAIL_SERVICE=smtp
EMAIL_HOST=${UAT_EMAIL_HOST}
EMAIL_PORT=587
EMAIL_USER=${UAT_EMAIL_USER}
EMAIL_PASS=${UAT_EMAIL_PASS}
EMAIL_FROM=noreply@genstack.com

# Security
BCRYPT_ROUNDS=12
