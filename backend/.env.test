# Test Environment
NODE_ENV=test
PORT=5001

# Database
MONGODB_URI=mongodb://localhost:27017/genstack-test
DB_NAME=genstack-test

# JWT
JWT_SECRET=test-jwt-secret-key-different-from-dev
JWT_EXPIRE=1h

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=warn

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./test-uploads

# Email
EMAIL_SERVICE=console
EMAIL_FROM=test@genstack.dev

# Security
BCRYPT_ROUNDS=4
