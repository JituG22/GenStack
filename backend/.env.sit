# SIT Environment
NODE_ENV=staging
PORT=5000

# Database
MONGODB_URI=mongodb://sit-mongodb-server:27017/genstack-sit
DB_NAME=genstack-sit

# JWT
JWT_SECRET=${SIT_JWT_SECRET}
JWT_EXPIRE=24h

# CORS
CORS_ORIGIN=https://sit.genstack.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=20971520
UPLOAD_PATH=/app/uploads

# Email
EMAIL_SERVICE=smtp
EMAIL_HOST=${SIT_EMAIL_HOST}
EMAIL_PORT=587
EMAIL_USER=${SIT_EMAIL_USER}
EMAIL_PASS=${SIT_EMAIL_PASS}
EMAIL_FROM=noreply@genstack.com

# Security
BCRYPT_ROUNDS=12
